<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/style.css"> 
</head>
<body>
    <header>
        <h1>All Users</h1>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for (user of users) { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.username %></td>
                        <td>
                            <form action="/user/<%= user.id %>/edit" method="get">
                                <button class="edit-button">Edit Username</button>
                            </form>
                        </td>
                        <td>
                            <form action="http://localhost:3000/user/<%= user.id %>/delete" method="get">
                                <button class="delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>
